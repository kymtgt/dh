#bottom
  section#contact
    .content
      h2.section-heading お問い合わせ
      .narrow-content
        .contact-row
          label.label(for="contactName") お名前
          .input
            input#contactName(type="text" name="name" required)
        .contact-row
          label.label(for="contactEmail") メールアドレス
          .input
            input#contactEmail(type="email" name="email" required)
        .contact-row
          label.label(for="contactTel") 電話番号
          .input
            input#contactTel(type="tel" name="tel" required)
        .contact-row
          label.label(for="contactContent") お問い合わせ内容
          .input
            textarea#contactContent(name="content" placeholder="利用目的（ワークショップ内容）、開催予定時期などお決まりでしたらご記入ください" required)
