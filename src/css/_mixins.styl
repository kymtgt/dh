clearfix()
  &:after
    content ''
    display table
    width 100%
    height 0
    clear both

sp-only()
  @media screen and (max-width:600px)
    { block }

tablet-only()
  @media screen and (min-width:601px) and (max-width:768px)
    { block }
  
tablet-under()
  @media screen and (max-width:768px)
    { block }  

pc-only()
  @media screen and (min-width:769px)
    { block }



margin-em(n)
  margin-top n - 0.25em
  margin-bottom n - 0.25em

margin-top-large()
  margin-top m-lg
  +sp-only()
    margin-top m-md
margin-bottom-large()
  margin-bottom m-lg
  +sp-only()
    margin-bottom m-md

padding-top-large()
  padding-top m-lg
  +sp-only()
    padding-top m-md

padding-bottom-large()
  padding-bottom m-lg
  +sp-only()
    padding-bottom m-md
